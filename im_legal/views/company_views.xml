<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_company_view_form" model="ir.ui.view">
        <field name="name">res_company.view.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
        <xpath expr="//page[@name='branches']" position="before">
            <page name="legal_info" string="Legal Information">
                <group>
                    <group>
                        <field name="legal_name" />
                        <field name="date_formation" />
                        <field name="founder_ids" widget="many2many_tags" />
                        <field name="business_model" />
                    </group>
                    <group>
                        <field name="legal_structure_id" />
                        <field name="classification_ids" widget="many2many_tags" />
                        <field name="par_value" />
                        <field name="total_share"/>
                    </group>    
                </group>
                <group name="cpy_description" string="Description">
                    <field name="description" nolabel="1" colspan="2"></field>
                </group>
                <group name="shareholders" string="Shareholders">
                    <field name="shareholder_ids" nolabel="1" colspan="2">
                        <tree editable="bottom">
                            <field name="company_id" column_invisible="1"/>
                            <field name="partner_id" />
                            <field name="num_of_shares" />
                            <field name="type_id" />
                            <field name="start_date" />
                        </tree>
                    </field>
                    
                </group>
                <group name="ledal_document_ids" string="Legal Documents">
                    <field name="legal_document_ids" nolabel="1" colspan="2">
                        <tree editable="bottom">
                            <field name="company_id" column_invisible="1"/>
                            <field name="name"/>
                            <field name="type_id"/>
                            <field name="document_id" widget="file"/>
                            <field name="document_date" />
                            <field name="oj_registration_number" />
                        </tree>
                    </field>
                </group>
            </page>
        </xpath>
        </field>
    </record>

</odoo>
